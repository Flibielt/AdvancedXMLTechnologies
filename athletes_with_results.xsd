<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="ATHLETES">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="ATHLETE" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="ATHLETE">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="RESULT" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
            <xs:attribute name="name" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="RESULT">
        <xs:complexType mixed="true">
            <xs:sequence>
                <xs:element name="LOCATION" type="xs:string" minOccurs="1" maxOccurs="1"/>
                <xs:element name="YEAR" type="xs:int" minOccurs="1" maxOccurs="1"/>
                <xs:element name="GAME" type="xs:string" minOccurs="1" maxOccurs="1"/>
            </xs:sequence>
            <xs:attribute name="medal" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
